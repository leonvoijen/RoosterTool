@model EventModel
@{
    ViewData["Title"] = "AddEvent";
}


<h1>AddEvent</h1>

<div class="text-center">
    <form asp-controller="Event" asp-action="CreateEvent">
        <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input asp-for="Name" type="Text" class="form-control" id="name" name="name" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Date</label>
            <input asp-for="Date" type="Text" class="form-control" id="date" name="date" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Description</label>
            <input asp-for="Description" type="Text" class="form-control" id="description" name="description" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Starttijd</label>
            <input asp-for="StartTime" type="Text" class="form-control" id="startTime" name="startTime" placeholder="">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">eindtijd</label>
            <input asp-for="EndTime" type="Text" class="form-control" id="endTime" name="endTime" placeholder="">
        </div>
        <h3>Required Staff</h3>
        <h5>Number of Bartenders</h5>
        <input asp-for="Nrbar" type="number" value="0" min="0" max="10" step="1" name="nrbar" /><br/>
        <h5>Number of EventEmployees</h5>
        <input asp-for="Nrevent" type="number" value="0" min="0" max="10" step="1" name="nrevent" /><br/>
        <h5>Number of extra staff</h5>
        <input asp-for="Nriets" type="number" value="0" min="0" max="10" step="1" name="nriets" /><br/>
        <br />
        <button class="btn btn-primary" id="button">Save</button>
    </form>
</div>
